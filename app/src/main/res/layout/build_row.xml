<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_list_item_height"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingEnd="@dimen/material_list_item_padding_horizontal"
    android:paddingLeft="@dimen/material_list_item_padding_horizontal"
    android:paddingRight="@dimen/material_list_item_padding_horizontal"
    android:paddingStart="@dimen/material_list_item_padding_horizontal"
    android:transitionGroup="false"
    android:transitionName="buildRowBg">

    <TextView
        android:id="@+id/buildName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/MaterialListItemPrimaryText"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:transitionName="buildName"
        tools:text="Build Order Title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buildVsRace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/MaterialListItemSecondaryText"
            tools:text="vs. Terran"/>

        <TextView
            android:id="@+id/buildCreationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MaterialListItemSecondaryText"
            tools:text="5 November 2012"/>
    </LinearLayout>
</LinearLayout>

